<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MultiplicationTable">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TABLA DE MULTIPLICAR"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginVertical="15dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/tablamultiplicar"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/keyboard"
            android:scaleType="centerInside"
            android:layout_marginVertical="15dp"/>

        <EditText
            android:id="@+id/numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa un número*"
            android:padding="10dp"
            android:inputType="numberSigned"/>

        <EditText
            android:id="@+id/limite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Límite a multiplicar*"
            android:padding="10dp"
            android:inputType="number"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultado"
            android:background="#566AD8"
            android:layout_marginVertical="40dp"
            android:onClick="btnResultado"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>