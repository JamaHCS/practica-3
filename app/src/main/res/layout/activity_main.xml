<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MENU"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="30dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ejercicio 1"
            android:background="#2196F3"
            android:layout_marginBottom="15dp"
            android:onClick="btnAreaTriangulo"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ejercicio 2"
            android:background="#E91E63"
            android:layout_marginBottom="15dp"
            android:onClick="btnTablaMultiplicar"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ejercicio 3"
            android:textColor="#ffffff"
            android:background="#717177"
            android:layout_marginBottom="15dp"
            android:onClick="btnSueldoCorrespondiente"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ejercicio 4"
            android:textColor="#ffffff"
            android:background="#090808"
            android:layout_marginBottom="15dp"
            android:onClick="btnInversion"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ejercicio 5"
            android:background="#FFC107"
            android:onClick="btnIMC"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>