<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Investment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INVERSIÓN"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginVertical="15dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/inversion"
            android:scaleType="centerCrop"/>
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/money"
            android:scaleType="centerInside"
            android:layout_marginVertical="15dp"/>
        
        <EditText
            android:id="@+id/cantidad_invertir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad a invertir*"
            android:padding="10dp"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/interes_mensual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Intéres mensual*"
            android:padding="10dp"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/numero_años"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de años*"
            android:padding="10dp"
            android:inputType="number"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular"
            android:background="#2196F3"
            android:layout_marginVertical="40dp"
            android:onClick="btnCalcularCapital"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>